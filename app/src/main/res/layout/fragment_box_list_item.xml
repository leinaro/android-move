<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent">

  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_gravity="center"
      android:layout_margin="2dp"
      android:id="@+id/card"
      app:cardElevation="2dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:padding="15dp">

      <ImageView
          android:id="@+id/image"
          android:visibility="gone"
          android:importantForAccessibility="no"
          android:layout_width="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintDimensionRatio="1:1"
          android:scaleType="centerInside"
          android:layout_height="0dp"
          android:src="@drawable/ic_box" />

      <TextView
          android:id="@+id/item_number"
          android:textStyle="bold"
          android:lines="1"
          android:ellipsize="end"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_width="wrap_content"
          app:layout_constraintEnd_toStartOf="@id/item_qr"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/image"
          android:textAppearance="?attr/textAppearanceListItem"
          tools:text="#001" />

      <TextView
          android:textStyle="bold"
          android:id="@+id/item_qr"
          android:textAlignment="textEnd"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/item_number"
          android:layout_width="0dp"
          android:lines="1"
          android:ellipsize="end"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="@id/item_number"
          android:textAppearance="?attr/textAppearanceListItem"
          tools:text="40458f06" />

      <TextView
          android:id="@+id/item_place"
          android:lines="1"
          android:ellipsize="end"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/item_qr"
          android:textAppearance="?attr/textAppearanceListItem"
          tools:text="Sala" />

      <TextView
          android:id="@+id/content"
          android:lines="2"
          android:ellipsize="end"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/item_place"
          android:textAppearance="?attr/textAppearanceListItem"
          tools:text="juegos de mesa" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>