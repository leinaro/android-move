<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    android:background="#FFFFFF"
    app:behavior_peekHeight="62dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

  <TextView
      android:id="@+id/item_number_pending"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="@id/item_number_pending_label"
      app:layout_constraintEnd_toEndOf="@id/item_number_pending_label"
      android:layout_width="wrap_content"
      android:textColor="@color/viewfinder_laser"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:textAppearance="?attr/textAppearanceHeadline4"
      tools:text="1" />

  <TextView
      android:id="@+id/item_number_pending_label"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/item_number_inventoried_label"
      android:layout_width="wrap_content"
      android:textColor="@color/viewfinder_laser"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/item_number_pending"
      android:textAppearance="?attr/textAppearanceSubtitle1"
      android:text="pendientes" />

  <TextView
      android:id="@+id/item_number_inventoried"
      android:textStyle="bold"
      android:textColor="@color/result_points"
      app:layout_constraintStart_toStartOf="@id/item_number_inventoried_label"
      app:layout_constraintEnd_toEndOf="@id/item_number_inventoried_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:textAppearance="?attr/textAppearanceHeadline4"
      tools:text="99" />

  <TextView
      android:id="@+id/item_number_inventoried_label"
      app:layout_constraintStart_toEndOf="@id/item_number_pending_label"
      app:layout_constraintEnd_toStartOf="@id/item_number_total_label"
      android:layout_width="wrap_content"
      android:textColor="@color/result_points"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/item_number_pending"
      android:textAppearance="?attr/textAppearanceSubtitle1"
      android:text="escaneadas" />

  <TextView
      android:id="@+id/item_number_total"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="@id/item_number_total_label"
      app:layout_constraintEnd_toEndOf="@id/item_number_total_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      android:textAppearance="?attr/textAppearanceHeadline4"
      tools:text="100" />

  <TextView
      android:id="@+id/item_number_total_label"
      app:layout_constraintStart_toEndOf="@id/item_number_inventoried_label"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/item_number_pending"
      android:textAppearance="?attr/textAppearanceSubtitle1"
      android:text="total" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/box_list"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/item_number_pending_label"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layoutManager="LinearLayoutManager"
      android:orientation="vertical"
      tools:context=".InventoryFragment"
      tools:itemCount="10"
      tools:listitem="@layout/fragment_box_list_item" />


</androidx.constraintlayout.widget.ConstraintLayout>